@page "/Users/{Id:int}"

@using Domain.Entities
@using Application.Services.Users

@inject IUserService UserService

<PageTitle>User Details</PageTitle>
<h1>User Details</h1>
<div>
 @if (user != null)
    {
        <div class="card mt-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                  <a href="/Users" class="btn btn-secondary">Back to List</a>
                <h3>User Details</h3>
               
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Id</dt>
                    <dd class="col-sm-9">@user.Id</dd>

                    <dt class="col-sm-3">FirstName</dt>
                    <dd class="col-sm-9">@user.FirstName</dd>

                    <dt class="col-sm-3">LastName</dt>
                    <dd class="col-sm-9">@user.LastName</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@user.Email</dd>

                    <dt class="col-sm-3">PhoneNumber</dt>
                    <dd class="col-sm-9">@user.PhoneNumber</dd>

                    <dt class="col-sm-3">Password</dt>
                    <dd class="col-sm-9">@user.Password</dd>

                    <dt class="col-sm-3">Role</dt>
                    <dd class="col-sm-9">@user.Role</dd>

                    
                </dl>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }
    
    private User user;
    protected override void OnInitialized()
     {
       user = UserService.GetUserById(Id);
     } 
}