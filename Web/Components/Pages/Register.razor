@page "/register"
@using MudBlazor

<MudPaper Class="pa-6 mx-auto mt-10" MaxWidth="400px" Elevation="4">
    <MudText Typo="Typo.h5" Class="mb-4">Create Account</MudText>

    <MudForm @ref="form" Model="@registerModel" OnValidSubmit="HandleRegister">
        
        <MudTextField Label="First Name"
                      @bind-Value="registerModel.FirstName"
                      Required="true"
                      RequiredError="First name is required" />

        <MudTextField Label="Last Name"
                      @bind-Value="registerModel.LastName"
                      Required="true"
                      RequiredError="Last name is required" />

        <MudTextField Label="Email"
                      @bind-Value="registerModel.Email"
                      Required="true"
                      RequiredError="Email is required"
                      InputType="InputType.Email" />

        <MudTextField Label="PhoneNumber"
                      @bind-Value="registerModel.PhoneNumber"
                      Required="true"
                      RequiredError="Phone number is required"/>

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   Class="mt-4"
                   ButtonType="ButtonType.Submit"
                   FullWidth="true">
            Register
        </MudButton>

    </MudForm>
</MudPaper>

@code {
    private MudForm form;

    private RegisterModel registerModel = new();

    private void HandleRegister()
    {
        // TODO: Save user to database
        Console.WriteLine("User Registered");
    }

    public class RegisterModel
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public string Email { get; set; }
        public string PhoneNumber { get; set; }
       
    }
}
