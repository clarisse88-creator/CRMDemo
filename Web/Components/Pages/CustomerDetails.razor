@page "/Customers/{Id:int}"

@using Domain.Entities
@using Application.Services.Customers


@inject ICustomerService CustomerService 

<PageTitle>Customer Details</PageTitle>

    @if (customer != null)
    {
            <div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@customer.Id</dd>

                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@customer.Name</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@customer.Email</dd>

                    <dt class="col-sm-3">StartDate</dt>
                    <dd class="col-sm-9">@customer.Address</dd>

                    <dt class="col-sm-3">EndDate</dt>
                    <dd class="col-sm-9">@customer.City</dd>

                    <dt class="col-sm-3">Budget</dt>
                    <dd class="col-sm-9">@customer.Type</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@customer.Status</dd>
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@customer.CreatedAt</dd>
                    <dt class="col-sm-3">Status</dt>
                    
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@customer.City</dd>

                </dl>
            </div>
        </div>
    }
   

@code {
    [Parameter]
    public int Id { get; set; }
    
    private Customer customer;
    protected override void OnInitialized()
     {
       customer =CustomerService.GetCustomerById(Id);
     } 
}